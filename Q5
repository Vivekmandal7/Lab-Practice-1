#include <stdio.h>

int main() {
    float height, distance = 0;
    const float gravity = 9.8;

    printf("Enter the height (in meters): ");
    scanf("%f", &height);

    for (int i = 0; i < 3; i++) {
        distance += height;
        height /= 2;
    }

    printf("Total distance traversed by the ball: %.2f meters\n", distance);

    return 0;
}
